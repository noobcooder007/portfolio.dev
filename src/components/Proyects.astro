---
import AstroIcon from './icons/AstroJS.astro';
import TailwindIcon from './icons/TailwindCSS.astro';
import TypeScriptIcon from './icons/TypeScript.astro';
const TAGS = {
  ASTRO: {
    name: 'Astro',
    class: 'text-white',
    icon: AstroIcon,
  },
  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'text-[#5eb3ea]',
    icon: TailwindIcon,
  },
  TYPESCRIPT: {
    name: 'TypeScript',
    class: 'text-[#4476c0]',
    icon: TypeScriptIcon,
  },
};

const PROJECTS = [
  {
    title: 'Portfolio personal',
    description:
      'Nuevo y renovado portfolio personal contruido con el framework de Astro estilizado con tailwind CSS y el poder de Typescript.',
    link: '#',
    github: 'https://github.com/noobcooder007/xDxDJohanxDxD',
    image: './proyects/proyect1.webp',
    tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class='text-2xl font-semibold text-yellow-200 mb-2'>{title}</h3>
      <p class='text-lg mb-4 text-pretty'>{description}</p>
      <ul class="flex gap-x-2 flex-row pb-4">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} bg-white/10 py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class='rounded shadow-2xl shadow-white/10'
        src={image}
        alt='proyect image'
      />
    </article>
  ))
}
